@model  List<SistemaGestion.Models.PAGOS>
@{
    ViewBag.Title = "Pagos";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<body class="sb-nav-fixed">
    <div id="layoutSidenav">
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">Reportes</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Ventas</li>
                        </ol>
                    </nav>

                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card border-secondary">
                                <div class="card-header bg-secondary text-white">
                                    Libro Venta Automatizado
                                </div>
                                @using (Html.BeginForm("ExcelPagos", "CentralizacionPagos", FormMethod.Post, new { id = "fromConciliacionManual", role = "form" }))
                                {
                                    <div class="card-body p-2">

                                        <div class="row">

                                            <div class="col-sm-3">
                                                <div class="form-group mb-0">
                                                    <label for="txtRucProveedor" class="col-form-label col-form-label-sm">Tienda:</label>
                                                    <select class="form-control form-control-sm model" id="cboTienda" name="Tienda"></select>
                                                </div>
                                            </div>
                                            <div class="col-sm-2">
                                                <div class="form-group mb-0">
                                                    <label for="txtRucProveedor" class="col-form-label col-form-label-sm">Fecha Para Ingresar:</label>
                                                    <input type="date" class="form-control form-control-sm model" id="txtFecha" name="txtFecha" autocomplete="off" value="@DateTime.Today.ToString("yyyy-MM-dd")">
                                                </div>
                                            </div>

                                            <div class="col-sm-2">
                                                <div class="form-group mb-0">
                                                    <label for="btnBuscar" class="col-form-label col-form-label-sm invisible">Direccion:</label>
                                                    <button id="btnBuscar" type="button" class="btn btn-sm btn-danger btn-block"><i class="fas fa-search"></i> Buscar</button>
                                                </div>
                                            </div>

                                            <div class="col-sm-2">
                                                <div class="form-group mb-0">
                                                    <label for="btnBuscar" class="col-form-label col-form-label-sm invisible">Direccion:</label>
                                                    <button id="btnPagos" type="button" class="btn btn-sm btn-success btn-block"><i class="fas fa-file-excel"></i>Descargar</button>
                                                </div>
                                            </div>

                                        </div>



                                        <div class="row mb-2">

                                        </div>

                                        <div id="diferencias">
                                            @if (Model.Count < 1)
                                            {
                                                <div class="container shadow-lg p-3 mb-5 mt-5 bg-body rounded">
                                                    <div class="row">
                                                        <div class="col-lg-12">
                                                            <table id="tablaVacia" class="table table-bordered  display nowrap" cellspacing="0" width="100%">
                                                                <thead>
                                                                    <tr>
                                                                        <th class="text-center">Tipo_Trx</th>
                                                                        <th class="text-center">Tienda</th>
                                                                        <th class="text-center">Trx_Global</th>
                                                                        <th class="text-center">Trx</th>
                                                                        <th class="text-center">Fecha</th>
                                                                        <th class="text-center">Monto</th>
                                                                        <th class="text-center">Monto_Pago</th>
                                                                        <th class="text-center">Autorizador</th>
                                                                        <th class="text-center">AutorizadorTBk</th>
                                                                        <th class="text-center">Referencia</th>
                                                                        <th class="text-center">RutCliente</th>
                                                                        <th class="text-center">Pago</th>
                                                                        <th class="text-center">Estado</th>


                                                                    </tr>
                                                                </thead>
                                                                <tbody></tbody>

                                                            </table>


                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }
                                </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
</body>
@section scripts{

    <script>
        $(document).ready(function () {
        $('table.display').DataTable({
            responsive: true,
             "language": {
                   url: "@Url.Content("~/Content/datatable/js/datatable_spanish.json")"
               }
        });
            $('#btnPagos').click(function (event) {
            event.preventDefault();
            var url = '@Url.Action("ExcelPagos", "CentralizacionPagos")';
            var Fecha = $("#txtFecha").val();
            var Tienda = $("#cboTienda").val();
            console.log(Fecha);
            console.log(Tienda);
            //var tipo = $("#TypeReporte").val();
            DownloadFileFechasEntre(Fecha, Tienda, url);
        });
      

        $(function () {
            $("#btnBuscar").click(function () {
                event.preventDefault();
                var local = $("#cboTienda").val();
                if (local == 0) {
                    alert("Debe al menos enviar una Tienda")
                    return 0;
                }

                var result = confirm("Desea Cargar Los Pagos?");
                if (result) {
                  
                    $('#cargal').modal('show');
                    var url = "@Url.Action("Pagos", "CentralizacionPagos")";
                    var manejarErrorAjax = "Eror";

                    var Fecha = $("#txtFecha").val();
                    var data = { Fecha: Fecha, local: local };
                    $.post(url, data).done(function (data) {
                        setTimeout(bajar, 1000);
                        setTimeout(Subir, 2000);

                        function bajar() {
                            $('#cargal').modal('hide');

                        }
                        function Subir() {
                            $('#diferencias').html(data);
                            $('#diferencias').show();
                        }

                    }).fail(manejarErrorAjax);

                }
            });

        })
    });

        jQuery.ajax({
            url: $.MisUrls.url._TiendaPorNombre,
            type: "GET",
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                $("<option>").attr({ "value": 0 }).text("-- Seleccionar Una Tienda--").appendTo("#cboTienda");
                $.each(data.data, function (i, item) {
                    $("<option>").attr({ "value": item.Codigo }).text(item.Nombre_Centro).appendTo("#cboTienda");

                })
            },
            error: function (error) {
                console.log(error)
            },

        });

        //function bajarModalConciliacion() {
        //    $('#modalConciliacion').modal('hide');
        //}

        //function bajarModalDiferencias() {
        //    $('#modalDiferencia').modal('hide');
        //}

    

        function DownloadFileFechasEntre(Fecha,Tienda, urlAc) {


            var url = urlAc;
            //var Fecha = F;
            //var fechaFin = fechaT;
            //var tipoR = tipo;

            var list = [];
            var fileName = '';
            list.push({ fileName: fileName });

            $('#cargal').modal('show');
            $.ajax({
                url: url,
                type: "post",
                data: { Fecha:Fecha, Tienda:Tienda },
                xhrFields: {
                    responseType: 'blob'
                },
                success: function (data, textStatus, xhr) {
                    var filename = list[0].filename;
                    var disposition = xhr.getResponseHeader('Content-Disposition');
                    if (disposition && disposition.indexOf('attachment') !== -1) {
                        var filenameRegex = /filename[^;=\n]*=((['"]).*?\2|[^;\n]*)/;
                        var matches = filenameRegex.exec(disposition);
                        if (matches != null && matches[1]) filename = matches[1].replace(/['"]/g, '');
                        var a = document.createElement('a');
                        var url = window.URL.createObjectURL(data);
                        a.href = url;
                        a.download = filename;
                        document.body.append(a);
                        a.click();
                        a.remove();
                        window.URL.revokeObjectURL(url);
                    }
                    else {
                        getErrorToastMessage("ERROR AL DESCARGAR ARCHIVO");
                    }
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {

                },
                complete: function () {
                    //var interfaz = list[0];
                    //deleteArchivo(list);
                    setTimeout(function () {
                        $("#cargal").modal('hide');
                    }, 1500);

                }
            });
        }




    </script>




}
