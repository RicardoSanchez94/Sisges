
@{
    ViewBag.Title = "CerrarPeriodo";
}

<body class="sb-nav-fixed">
    <div id="layoutSidenav">
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">


                    <div class="row">

                        <div class="col-sm-12">
                            <div class="card border-secondary">
                                <div class="card-header bg-secondary text-white">
                                 Cerrar Periodo 
                                </div>

                                <div class="card-body">
                                    <div class="row">
                                       

                                        <div class="col-sm-3">
                                            <div class="form-group mb-0">
                                                <label for="btcarga" class="col-form-label col-form-label-sm invisible">Reproce:</label>
                                                <button id="btnBuscar" type="button" class="btn btn-sm btn-danger btn-block"><i class="fas fa-search"></i> Cerrar Periodo</button>
                                            </div>
                                        </div>

                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>

                    <br>

                </div>
            </main>
        </div>
    </div>
</body>
@section scripts{
    <script>


        $("#btnBuscar").click(function () {

              var result = confirm("Desea Cerrar El Periodo?");
            if (result) {
                $('#cargal').modal('show');
                 var url = "@Url.Action("ENDPeriodo", "Administracion")";
                var manejarErrorAjax = "Eror";
                //var Inicio = $("#Inicio").val();
                //var Fin = $("#Fin").val();

                $.ajax({
                    type: 'POST',
                    url: url,
             /*       data: { Inicio: Inicio, Fin: Fin },*/
                    success: function (response) {
                        if (response.error == true) {

                            setTimeout(MostrarMensaje, 5000);
                            setTimeout(bajar, 7000);


                        }
                        else {
                            setTimeout(MostrarMensaje, 5000);
                            setTimeout(bajar, 7000);

                        }
                        function MostrarMensaje() {
                            $('#cargal').modal('hide');
                            $('#cargarMensajes').modal('show');
                            $('#mensajeLoad').html(response.respuesta);
                        };


                        function bajar() {

                            $('#cargarMensajes').modal('hide');
                        };


                    },
                    error: function (xhr, ajaxOptions, thrownError) {
                        alert(thrownError);
                    }
                });
            }




        });
    </script>
}


