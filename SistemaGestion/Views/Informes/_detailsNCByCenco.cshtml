@model List<SistemaGestion.Models.ViewModels.NcDetailsByCenco>
<div class="modal-dialog modal-xl" role="document">
    <div class="modal-content">
        <div class="modal-header">


            <h5 class="modal-title text-rigth" id="exampleModalLabel"> <i class="fa fa-file-text" aria-hidden="true"></i> DETALLE NOTAS DE CRÉDITO   -  <i class="fa fa-store"></i> @(ViewBag.nomCenco) - <i class="fa fa-calendar"></i> FECHA: @(ViewBag.fechaNC) </h5>

            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <div class="row">
                <div class="col-lg-12">
                    <div class="table-responsive">
                        <table id="tbNCIDetalleByCenco" class="table table-bordered table-hover" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th class="text-center">TRX</th>
                                    @*<th class="text-center">Fecha</th>*@
                                    <th class="text-center">Tipo</th>
                                    <th class="text-center">Folio</th>
                                    <th class="text-center">Hora Emision NC</th>
                                    <th class="text-center">Total NC</th>
                                    <th class="text-center">Monto Boleta</th>
                                    <th class="text-center">Documento</th>
                                    <th class="text-center">N° Boleta</th>
                                    <th class="text-center">Desc. Pago</th>
                                    <th class="text-center">Nombre Supervisor</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var a in Model)
                                {
                                <tr @(a.TIPONOTACREDITO.Contains("ESPECIAL") ? "style=color:#856404;background-color:#ffeeba;" : "")>
                                    <td class="text-center">@a.TRX</td>
                                    @*<td class="text-center">@a.fechaEmision.ToString("dd-MM-yyyy")</td>*@
                                    <td class="text-center">@a.TIPONOTACREDITO</td>
                                    <td class="text-center">@a.Folio_notacredito</td>
                                    <td class="text-center">@a.hora_emision_nc</td>
                                    <td class="text-center">$@a.Total_notacredito.Value.ToString("N0")</td>
                                    <td class="text-center">$@a.Monto_Boleta.Value.ToString("N0")</td>
                                    <td class="text-center">@a.Documento_Origen</td>
                                    <td class="text-center">@a.Nro_Boleta</td>
                                    <td class="text-center">@a.Descripcion_pago</td>                                    
                                    <td class="text-center">@a.nombre_Jefatura_Autoriza</td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>


<script>

      $(document).ready(function () {

        var tabla_data;
          tabla_data = $('#tbNCIDetalleByCenco').DataTable({
             "language": {
                   url: "@Url.Content("~/Content/datatable/js/datatable_spanish.json")"
               }
        });
    });

</script>

