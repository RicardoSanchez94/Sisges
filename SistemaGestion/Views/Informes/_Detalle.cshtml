<div class="mb-2 mt-1">
    <div class="row">
        @if (Model.Count != 0)
        {
            foreach (var a in Model)
            {
                <div class="col-lg-3">
                    <div class="card text-center">
                        <div class="card-header">
                            <h6><i class="fa fa-globe"></i>  @a.TipodePago</h6>
                        </div>
                        <div class="card-body">
                            <ul class="list-group">
                                <li class="list-group-item  list-group-item-success" style="font-size:14px;"> Total de Venta <h5>@a.TotalVenta.Value.ToString("C")</h5></li>
                                @if (Model.Count == 1)
                                {
                                    <li class="list-group-item  list-group-item-light" style="height:86px; font-size:12px;">SIN INFORMACIÓN</li>

                                }
                                else
                                {
                                    <li class="list-group-item list-group-item-warning" style="font-size:12px;">Porcentaje <h4>@a.Porcentaje.Value.ToString("0.##") %</h4></li>
                                }

                                <li class="list-group-item list-group-item-secondary" style="font-size:12px;">TRX <h4>@a.Trx </h4></li>


                            </ul>

                        </div>

                    </div>
                </div>
            }
        }

        else
        {
            <div class="col-lg-12">
                <div class="alert alert-danger" role="alert">
                    SIN INFORMACIÓN ENCONTRADA
                </div>

            </div>
        }





    </div>
</div>

