                                <td class="td-item"><p class="item">@item.MontoSencillo.Where(x => x.IdDatalleSencillo == item.Id).Select(x => x.Monto7).SingleOrDefault()</p></td>
                                <td class="td-item"><p class="item">@item.Total</p></td>
                                <td class="td-item"><p class="item">@item.DiaLiberacion</p></td>

                            </tr>
                        }
                        catch (Exception ex )
                        {

                            throw ex;
