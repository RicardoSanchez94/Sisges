@{
    ViewBag.Title = "IdocClientes";
}



<body class="sb-nav-fixed">
    <div id="layoutSidenav">
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">IdocClientes</li>
                        </ol>
                    </nav>

                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card border-secondary">
                                <div class="card-header bg-secondary text-white">
                                   Generar Idoc de Clientes por Rut
                                </div>

                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-sm-2">
                                            <div class="form-group mb-0">
                                                <label for="txtRucProveedor" class="col-form-label col-form-label-sm">Ingrese Rut</label>
                                                <input type="number" class="form-control form-control-sm model" id="txtFecha" name="txtFecha" autocomplete="off">
                                            </div>
                                        </div>
                                        <div class="col-sm-2">
                                            <div class="form-group mb-0">
                                                <label for="btnBuscar" class="col-form-label col-form-label-sm invisible">Direccion:</label>
                                                <button id="btcarga" type="button" class="btn btn-sm btn-danger btn-block"><i class="fas fa-search"></i> Buscar</button>
                                            </div>
                                        </div>
                                      

                                    </div>

                                    <br />

                                </div>

                                <div class="alert alert-success" role="alert">
                                    Ingresar Rut sin Guiones ni Puntos
                                </div>

                                @if (ViewData["Mensaje"] != null)
                                {
                                    <div class="alert alert-danger" role="alert">
                                        @ViewData["Mensaje"]
                                    </div>
                                }


                            </div>

                        </div>

                    </div>

                </div>

            </main>
        </div>
    </div>
</body>


@section scripts{

    <script>

        $(document).ready(function () {


        })
        $(function (){
            $("#btcarga").click(function () {
                event.preventDefault();
                var result = confirm("Desea Generar Idoc?");
                if (result){
                    $('#cargal').modal('show');
                    var url = "@Url.Action("IdocClientes", "Gestion")";
                    var manejarErrorAjax = "Eror";
                    var Rut = $("#txtFecha").val();
                    var data = {rut: Rut };
                    $.post(url, data).done(function (resultado) {
                        $('#cargal').modal('hide');
                        if (resultado.error) {
                            swal(resultado.respuesta, "Presiona OK Para Continuar", "success");
                        } else {
                            swal(resultado.respuesta, "Presiona OK Para Continuar", "warning");
                        }
                        $("mensaje-alerta").html(resultado.respuesta)
                    }).fail(manejarErrorAjax);

                }

            });

        })


    </script>
}
