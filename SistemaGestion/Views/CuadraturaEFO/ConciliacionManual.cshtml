<div class="modal fade" id="modalConciliacion" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="true"></div>

@section scripts
{
    <script>
    $(document).ready(function () {
        $('table.display').DataTable({
            responsive: true,
             "language": {
                   url: "@Url.Content("~/Content/datatable/js/datatable_spanish.json")"
               }
        });
        $('#DescargaDif').click(function (event) {
            event.preventDefault();
            var url = '@Url.Action("ExcelNoConciliadas", "CuadraturaEFO")';

            DownloadFileFechasdif(url);
        });
  
        $('#Descarga').click(function (event) {
