            var url = '@Url.Action("ExcelConciliadasA", "CuadraturaEFO")';

            var num = 2;
            DownloadFileFechasEntre(url,num);
        });
    });
         function Conciliacion(id) {
        //  var local = Local;
          console.log('entro al reproceso');

         var url = '@Url.Action("MontosZQ", "CuadraturaEFO")';
           $.ajax({
            type: 'POST',
               url: url,
               data: { id },
               success: function (response) {
                   $("#modalConciliacion").html(response);
