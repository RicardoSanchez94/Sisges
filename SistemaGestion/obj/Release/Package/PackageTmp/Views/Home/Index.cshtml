@model List<SistemaGestion.Models.ViewModels.DetalleDahsboard>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .border-grey {
        border-color: #9b9ea1a6 !important
    }
</style>

<body class="sb-nav-fixed">
    <div id="layoutSidenav">
        <div id="layoutSidenav_content">
            <div class="container-fluid px-4">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card">
                            <div class="card-header text-white bg-secondary border border-grey border-bottom-0">
                                <h6 class="mb-0">
                                    <span> <i class="fa fa-chart-pie"></i> Dashboard Automatico</span>
                                </h6>
                            </div>
                            <div class="card-body border border-grey pt-1">
                                <div class="row justify-content-lg-center">
                                    <div class="col-sm-2">
                                        <div class="form-group mb-0">
                                            <label for="txtRucProveedor" class="col-form-label col-form-label-sm">Fecha Para Ingresar</label>
                                            <input type="date" class="form-control form-control-sm model" id="txtFecha" name="txtFecha" autocomplete="off" value="@DateTime.Today.ToString("yyyy-MM-dd")">
                                        </div>
                                    </div>
                                    <div class="col-sm-2">
                                        <div class="form-group mb-0">
                                            <label for="btnBuscar" class="col-form-label col-form-label-sm invisible">On:</label>
                                            <button id="btnBuscar" type="button" class="btn btn-sm btn-danger btn-block"><i class="fas fa-search"></i> Buscar</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card">
                            <div class="card-header text-dark bg-white border border-grey border-bottom-0 pt-0 pb-0">
                                <div class="row ml-0 mr-0">
                                    <div class="col-lg-3 col-md-12 col-sm-12 text-left ml-0 mt-0 pl-0 pt-2">
                                        <h6 class="mb-0 mt-1 1h-100"><i class="fa fa-list"></i> Detalle Busqueda</h6>
                                    </div>
                                  
                                </div>
                            </div>
                            <div class="card-body border border-grey">
                                <div id="diferencias">
                                 
                                </div>
                               
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</body>

@section scripts{
    <script>
        $(document).ready(function () {

            
            $('[data-toggle="tooltip"]').tooltip()

                $('#tablaVacia').DataTable(
                    {
                        responsive: true,
                        "language": {
                            url: "@Url.Content("~/Content/datatable/js/datatable_spanish.json")"
                        }
                    });

                
                    $("#btnBuscar").click(function () {
                        event.preventDefault();
                        //var result = confirm("Desea Cargas Ventas?");
                        //  if (result){
                        $('#cargal').modal('show');
                        var url = "@Url.Action("Listar", "Home")";
                        var manejarErrorAjax = "Eror";
                        var Fecha = $("#txtFecha").val();
                        var data = { Fecha: Fecha };
                        $.post(url, data).done(function (data) {
                            setTimeout(bajar, 1000);
                            setTimeout(Subir, 2000);
                       

                            function bajar() {
                                $('#cargal').modal('hide');

                            }
                            function Subir() {
                                $('#diferencias').html(data);
                                $('#diferencias').show();
                            }
                           

                        }).fail(manejarErrorAjax);

                        //}
                    });
                    });
        
    </script>
}

