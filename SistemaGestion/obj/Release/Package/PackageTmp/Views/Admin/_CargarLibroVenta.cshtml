                                $("#cargal").modal('hide');

                            };
                            //function CerrarVistaP() {
                            //    $('#modal').modal('hide');
                            //};
                            function bajaModal() {
                                $('#cargarMensajes').modal('hide');
                                $('#modal').modal('hide');
                               

                            };

                            function mostrarMensaje() {
                                $("#cargarMensajes").modal('show');
                                $('#mensajeLoad').html(r.respuesta);

