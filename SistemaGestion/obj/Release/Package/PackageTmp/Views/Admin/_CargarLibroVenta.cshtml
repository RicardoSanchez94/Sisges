                    <h5 class="modal-title" id="exampleModalLabel">Carga de Libro Ventas Manual
                    </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                @using (Html.BeginForm("saveLV", "Gestion", FormMethod.Post, new { id = "saveLV", role = "form", enctype = "multipart/form-data" }))
