                    </div>
                }

            </div>
        </div>
    
    <script>
        $(document).ready(function () {
            $('#Cargarlv').click(function () {
                event.preventDefault();
                $('#cargal').modal('show');
                var para = new FormData($(saveLV).get(0));
                var url = '@Url.Action("saveLV", "Gestion")';
                $.ajax({
                    type: 'POST',
                    url: url,
                    //async: false,
                    processData: false,
                    contentType: false,
                    data: para,
                    success: function (r) {
                        if (r.error == false) {
                        
                            setTimeout(carga, 3000);
