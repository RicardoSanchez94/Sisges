<div class="card">
    <div class="card-header bg-danger text-white">
        Totales de Transbank Api
    </div>
    <div class="card-body">
        <div class="row">
            @if (Model.TotalesTranbank.Count < 1)
            {
                <div class="col-lg-4">
                    <div class="card text-white mb-1">
                        <div class="card-header bg-success text-center"><h5 class="text-black">Debito</h5></div>
                        <div class="card-body  text-center">
                            <h3 class="text-dark"> 0</h3>
                        </div>
                        <div class="card-footer text-center bg-light">
                            <button type="button" class="btn bg-success text-dark"> N° Transacciones 0</button>
                            <a class="small text-white stretched-link" href="@Url.Action("TransaccionesApi", "ApiTransbank")"></a>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="card text-white mb-1">
                        <div class="card-header bg-success text-center"><h5 class="text-black">Credito</h5></div>
                        <div class="card-body  text-center">
                            <h3 class="text-dark"> 0</h3>
                        </div>
                        <div class="card-footer text-center bg-light">
                            <button type="button" class="btn bg-success text-dark"> N° Transacciones 0</button>
                            <a class="small text-white stretched-link" href="@Url.Action("TransaccionesApi", "ApiTransbank")"></a>
                        </div>
                    </div>
                </div>


            }

            @foreach (var a in Model.TotalesTranbank)
            {
                <div class="col-lg-4">
                    <div class="card text-white mb-1">
                        <div class="card-header bg-success text-center"><h5 class="text-black">@a.TipoPago</h5></div>
                        <div class="card-body  text-center">
                            <h3 class="text-dark">@a.Total.Value.ToString("0,000")</h3>
                        </div>
                        <div class="card-footer text-center bg-light">
                            <button type="button" class="btn bg-success text-dark">@a.Trx Transancciones</button>
                            <a class="small text-white stretched-link" href="@Url.Action("TransaccionesApi", "ApiTransbank")"></a>
                        </div>
                    </div>
                </div>



            }

        </div>
    </div>
</div>
<br>
