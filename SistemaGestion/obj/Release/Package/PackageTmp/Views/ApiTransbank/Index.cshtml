
@model List<SelectListItem>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body class="sb-nav-fixed">
    <div id="layoutSidenav">
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item active" aria-current="page">Transacciones</li>
                            <li class="breadcrumb-item"><a href="@Url.Action("TransaccionesTotales", "ApiTransbank")">Totales</a></li>

                        </ol>
                    </nav>

                    <div class="row">

                        <div class="col-sm-12">
                            <div class="card border-secondary">
                                <div class="card-header bg-secondary text-white">
                                    Dashboard/ Medios de Pago- ApiTransbank
                                </div>

                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-sm-2">
                                            <div class="form-group mb-0">
                                                <label for="txtRucProveedor" class="col-form-label col-form-label-sm">Fecha Para Ingresar</label>
                                                <input type="date" class="form-control form-control-sm model" id="Inicio" name="Inicio" autocomplete="off" value="@DateTime.Today.ToString("yyyy-MM-dd")">
                                            </div>
                                        </div>
                                        <div class="col-sm-2">
                                            <div class="form-group mb-0">
                                                <label for="txtRucProveedor" class="col-form-label col-form-label-sm">Fecha Fin:</label>
                                                <input type="date" class="form-control form-control-sm model" id="Fin" name="Fin" autocomplete="off" value="@DateTime.Today.ToString("yyyy-MM-dd")">
                                            </div>
                                        </div>
                                        <div class="col-sm-3">
                                            <div class="form-group mb-0">
                                                <label for="txtRucProveedor" class="col-form-label col-form-label-sm">Tienda:</label>
                                                <select class="form-control form-control-sm model" id="cboTienda" name="cboTienda"></select>
                                            </div>
                                        </div>
                                      

                                        <div class="col-sm-2">
                                            <div class="form-group mb-0">
                                                <label for="btcarga" class="col-form-label col-form-label-sm invisible">Direccion:</label>
                                                <button id="abonos" type="button" class="btn btn-sm btn-danger btn-block"><i class="fas fa-search"></i> Buscar</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div id="DatosTotal"></div>
                    <br>

                </div>
            </main>
        </div>
    </div>
</body>
@section scripts{
    <script>

        $(function (){
            $("#abonos").click(function () {
                event.preventDefault();
                var result = confirm("Desea Cargas Ventas?");
                if (result){
                    $('#cargal').modal('show');
                    var url = "@Url.Action("TransaccionesTotales", "ApiTransbank")";
                    var manejarErrorAjax = "Eror";
                    var FechIniBus = $("#Inicio").val();
                    var FechFinBus = $("#Fin").val();
                    var Tienda = $("#cboTienda").val();
                    var data = { FechaIni: FechIniBus, fechaFin :FechFinBus, local: Tienda };
                    $.post(url, data).done(function (data) {
                        if (data.error == false)
                        {

                            swal(data.respuesta, "Presiona OK Para Continuar", "warning");
                            $('#cargal').modal('hide');
                            setTimeout(cerrar, 1000);
                            function cerrar() {
                                $('#cargal').modal('hide');

                            }

                            console.log("entre al if");
                            } else {
                            //swal("Presiona OK Para Continuar");
                            console.log("entre al else");
                            setTimeout(bajar, 1000);
                            setTimeout(Subir, 1500);

                            function bajar() {
                                $('#cargal').modal('hide');

                            }
                            function Subir() {
                                $('#DatosTotal').html(data);
                                $('#DatosTotal').show();
                            }

                            }

                    }).fail(manejarErrorAjax);

                }
            });

        })
        jQuery.ajax({
            url: $.MisUrls.url._LocalesTBK,
            type: "GET",
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                $("<option>").attr({ "value": 0 }).text("-- Seleccionar todas--").appendTo("#cboTienda");
                $.each(data.data, function (i, item) {
                    $("<option>").attr({ "value": item.Codigo }).text(item.Nombre_Centro + "-" + item.Codigo).appendTo("#cboTienda");

                })
            },
            error: function (error) {
                console.log(error)
            },

        });
     

    </script>
}