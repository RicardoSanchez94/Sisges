@section scripts{
    <script>


        $("#btnBuscar").click(function () {

              var result = confirm("Desea Generar la Centralización?");
            if (result) {
                $('#cargal').modal('show');
                 var url = "@Url.Action("GetCentralizacion", "CentralizacionRRHH")";
                var manejarErrorAjax = "Eror";
                //var Fecha = $("#Fecha").val();


                $.ajax({
                    type: 'POST',
                    url: url,
                    //data: {Fecha: Fecha },
                    success: function (response) {
                        if (response.error == true) {

                            setTimeout(MostrarMensaje, 3000);
                            setTimeout(bajar, 5000);


                        }
                        else {
                            setTimeout(MostrarMensaje, 3000);
                            setTimeout(bajar, 5000);

                        }
                        function MostrarMensaje() {
                            $('#cargal').modal('hide');
                            $('#cargarMensajes').modal('show');
                            $('#mensajeLoad').html(response.respuesta);
                        };


                        function bajar() {

                            $('#cargarMensajes').modal('hide');
                        };


                    },
                    error: function (xhr, ajaxOptions, thrownError) {
                        alert(thrownError);
                    }
                });
            }




        });
    </script>
}

