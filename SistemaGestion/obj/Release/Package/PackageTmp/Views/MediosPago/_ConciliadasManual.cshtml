@model  SistemaGestion.Models.Conciliacion
<div class="container shadow-lg p-3 mb-5 mt-5 bg-body rounded">
    <div class="row">
        <div class="col-lg-12">

            <table id="tbReporte" class="display" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th class="text-center">Autorizador</th>
                        <th class="text-center">Fecha</th>
                        <th class="text-center">CodigoLocal</th>
                        <th class="text-center">Tienda</th>
                        <th class="text-center">Monto</th>
                        <th class="text-center">Tarjeta</th>
                        <th class="text-center">FechaConciliacion</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.DetalleConciliacion.Where(x => x.TipoConciliacion == "M"))
                    {
                    <tr>
                        <td>@item.AutorizadorTbk</td>
                        <td>@item.FechaTbk.Value.ToString("dd-MM-yyyy")</td>
                        <td>@item.CodigoLocal</td>
                        <td>@item.IdTienda</td>
                        <td>@item.MontoTbk.Value.ToString("C")</td>
                        <td>@item.TarjetaTBk</td>
                        <td>@(Model.Fecha.Value.ToString("dd-MM-yyyy"))</td>



                    </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>

</div>

<script>
    $(document).ready(function () {
        $('table.display').DataTable({
            responsive: true,
             "language": {
                   url: "@Url.Content("~/Content/datatable/js/datatable_spanish.json")"
               }
        });



    });

</script>

