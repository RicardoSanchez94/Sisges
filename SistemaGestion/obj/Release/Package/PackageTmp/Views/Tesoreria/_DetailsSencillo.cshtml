@model  List<SistemaGestion.Models.DetalleSencillo>

<div class="modal-dialog modal-xl" role="document">
    <div class="modal-content">
        <div class="modal-header">


            <h5 class="modal-title text-rigth" id="exampleModalLabel"> <i class="fa fa-file-text" aria-hidden="true"></i> Detalle Carta Instrucctivo  </h5>

            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <div class="row">
                <div class="col-lg-12">
                    <div class="table-responsive">
                        <table id="tbDetalleBySencillo" class="table table-bordered table-hover" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th class="text-center">Tienda</th>
                                    @*<th class="text-center">Fecha</th>*@
                                    <th class="text-center">Banco</th>
                                    @*<th class="text-center">TotalAnterior</th>*@
                                    <th class="text-center">NuevoTotal</th>
                                    <th class="text-center">Dia Liberacion</th>
                                    <th class="text-center">Dia Entrega</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var a in Model)
                                {
                                <tr>
                                    <td class="text-center">@a.IdTienda</td>
                                    @*<td class="text-center">@a.fechaEmision.ToString("dd-MM-yyyy")</td>*@
                                    <td class="text-center">@a.Banco</td>
                                    @*<td class="text-center">@a.Total</td>*@
                                    <td class="text-center">@a.NuevoTotal</td>
                                    <td class="text-center">@a.DiaLiberacion</td>
                                    <td class="text-center">@a.DiaEntrega</td>

                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<script>

      $(document).ready(function () {

        var tabla_data;
          tabla_data = $('#tbDetalleBySencillo').DataTable({
             "language": {
                   url: "@Url.Content("~/Content/datatable/js/datatable_spanish.json")"
               }
        });
    });

</script>