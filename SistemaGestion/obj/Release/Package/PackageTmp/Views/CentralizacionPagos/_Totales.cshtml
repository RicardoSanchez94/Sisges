@model List<SistemaGestion.Models.fnDashboard_Pagos_Result>


<div class="card">
    <div class="card-header bg-danger text-white">
        Totales de Transbank Api
    </div>
    <div class="card-body">
        <div class="row">
            @if (Model.Count < 1)
            {
                <div class="col-lg-4">
                    <div class="card text-white mb-1">
                        <div class="card-header bg-success text-center"><h5 class="text-black">Debito</h5></div>
                        <div class="card-body  text-center">
                            <h3 class="text-dark"> 0</h3>
                        </div>
                        <div class="card-footer text-center bg-light">
                            <button type="button" class="btn bg-success text-dark"> N° Transacciones 0</button>
                            <a class="small text-white stretched-link" href="@Url.Action("TransaccionesApi", "ApiTransbank")"></a>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="card text-white mb-1">
                        <div class="card-header bg-success text-center"><h5 class="text-black">Credito</h5></div>
                        <div class="card-body  text-center">
                            <h3 class="text-dark"> 0</h3>
                        </div>
                        <div class="card-footer text-center bg-light">
                            <button type="button" class="btn bg-success text-dark"> N° Transacciones 0</button>
                            <a class="small text-white stretched-link" href="@Url.Action("TransaccionesApi", "ApiTransbank")"></a>
                        </div>
                    </div>
                </div>


            }

            @foreach (var a in Model.Where(x => x.Tipo == false))
            {
                <div class="col-lg-4">
                    <div class="card text-white mb-1">
                        <div class="card-header bg-success text-center"><h5 class="text-black">@a.Tipo_Documento</h5></div>
                        <div class="card-body  text-center">
                            <h3 class="text-dark">@a.Total_Tienda.Value.ToString("C")</h3>
                        </div>
                        <div class="card-footer text-center bg-light">
                            <button type="button" class="btn bg-success text-dark">@a.TRX Transancciones</button>
                            <a class="small text-white stretched-link" href="@Url.Action("TrkPagoApi", "ApiTbkPagos")"></a>
                        </div>
                    </div>
                </div>



            }

        </div>
    </div>
</div>
<br>
<div class="card">
    <div class="card-header bg-danger text-white">
        Totales de Medios de pago GL
    </div>

    <div class="card-body">
        <div class="row">

            @if (Model.Count < 1)
            {

                <div class="col-lg-4">
                    <div class="card text-white">
                        <div class="card-header text-center bg-success"><h5 class="">Debito</h5></div>
                        <div class="card-body  text-center">
                            <h3 class="text-dark">0</h3>
                        </div>
                        <div class="card-footer text-center bg-light">
                            <a>
                                <div class="btn btn-outline-secondary btn-sm">

                                </div>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="card text-white">
                        <div class="card-header text-center bg-success"><h5 class="">Credito</h5></div>
                        <div class="card-body  text-center">
                            <h3 class="text-dark">0</h3>
                        </div>
                        <div class="card-footer text-center bg-light">
                            <a>
                                <div class="btn btn-outline-secondary btn-sm">

                                </div>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="alert alert-danger" role="alert">
                    No hay datos para esa tienda
                </div>
            }

            @foreach (var a in Model.Where(x => x.Tipo == true))
            {

                <div class="col-lg-4">
                    <div class="card text-white">
                        <div class="card-header text-center bg-success"><h5 class="">@a.Tipo_Documento</h5></div>
                        <div class="card-body  text-center">
                            <h3 class="text-dark">@a.Total_Tienda.Value.ToString("C")</h3>
                        </div>
                        <div class="card-footer text-center bg-light">
                            <a>
                                <div class="btn btn-outline-secondary btn-sm">
                                    @a.Fecha.Value.ToString("dd-MM-yyyy")
                                </div>
                            </a>
                        </div>
                    </div>
                </div>



            }
        </div>
    </div>

</div>

